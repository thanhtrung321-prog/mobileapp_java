<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewSearch"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menuImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/MenupricePopuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="$5"
                android:textColor="@color/text_color"
                android:textSize="22dp"
                app:layout_constraintBottom_toTopOf="@+id/menuaddToCartPopuler"
                app:layout_constraintEnd_toEndOf="@+id/menuaddToCartPopuler"
                app:layout_constraintStart_toStartOf="@+id/menuaddToCartPopuler"
                app:layout_constraintTop_toTopOf="@+id/menuImage"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/menufoodNamePopuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/yeonsungregular"
                android:gravity="center"
                android:text="Tên Món Ăn"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/menuImage"
                app:layout_constraintTop_toTopOf="@+id/menuImage" />

            <TextView
                android:id="@+id/menuaddToCartPopuler"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/addtocart_shape"
                android:gravity="center"
                android:text="Thêm Vào Giỏ"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>